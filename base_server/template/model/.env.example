# MySQL 데이터베이스 연결 설정
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=stockuser
MYSQL_PASSWORD=stockpass
MYSQL_DATABASE=stock_predictions
MYSQL_ROOT_PASSWORD=rootpassword

# MySQL 연결 문자열 (선택사항)
MYSQL_CONNECTION_STRING=mysql+pymysql://stockuser:stockpass@localhost:3306/stock_predictions

# API 설정
API_HOST=0.0.0.0
API_PORT=8000

# 모델 설정 (RunPod에서는 /workspace 경로 사용)
# 로컬: models/final_model.pth
# RunPod: /workspace/models/final_model.pth
MODEL_PATH=models/final_model.pth
PREPROCESSOR_PATH=models/preprocessor.pkl

# RunPod 환경 변수 (RunPod에서 자동 설정)
# RUNPOD_POD_ID=auto-set-by-runpod
# RUNPOD_API_KEY=your-api-key

# 로깅 설정
LOG_LEVEL=INFO
LOG_DIR=logs

# GPU 설정
CUDA_VISIBLE_DEVICES=0
TF_FORCE_GPU_ALLOW_GROWTH=true